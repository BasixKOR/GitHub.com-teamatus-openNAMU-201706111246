extends wiki
block content
  div(id='tool') 
   nav.menu
    a.menu-item.selected(href='#', onclick='return false', aria-label='문서를 수정 합니다.') 수정하기
    a.menu-item(href='/w/' + title2, aria-label='문서의 내용을 읽습니다.') 문서보기
  h1= title + ' (수정)'
  form#usrform(name='f1', method='POST', action='/edit/' + title)
    dl.form-group
      dt
      dd
        textarea(rows='30', cols='100', name='content', form='usrform')= data
        input(name='send', type="text", style="margin-top:10px;width:100%")
        .form-actions
          button.btn.btn-primary(type='submit', onclick="f1.action='/edit/"+title2+"';") 수정 내용 저장하기
          button.btn(type='submit', onclick="f1.action='/preview/"+title2+"';") 미리보기
  div!= content