block content
  div(id='tool')
    nav.menu
      a.menu-item.selected(href='#', onclick='return false') 삭제
      a.menu-item(href='/w/' + title2) 문서
  h1.title= title
  h2.title!= '<span style="margin-left:5px"></span>(삭제)'
  form#usrform(method='POST', action='/delete/' + title2)
