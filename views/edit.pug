extends wiki
block content
  div(id='tool') 
   nav.menu
    a.menu-item.selected(href='#', onclick='return false') 수정
    a.menu-item(href='/w/' + title2) 문서
  h1.title= title
  h2.title!= '<span style="margin-left:5px"></span>(수정)'
  form#usrform(name='f1', method='POST', action='/e/' + title2)
   textarea(rows='30', cols='100', name='content', form='usrform')= content
   input(name='send', type="text", style="margin-top:10px;width:100%")
   br
   br
   button.btn.btn-primary(type='submit', onclick="f1.action='/e/"+title2+"';") 저장
   <span style="margin-left:5px"></span>
   button.btn(type='submit', onclick="f1.action='/p/"+title2+"';") 미리보기